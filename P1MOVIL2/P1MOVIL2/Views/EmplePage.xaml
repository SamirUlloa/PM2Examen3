<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P1MOVIL2.Views.EmplePage">
    
    
    
    
    
    <ContentPage.Content>
        <StackLayout BackgroundColor="#FFE4D1">
            <Label Text="Recordatorios Registrados" HorizontalTextAlignment="Center" FontSize="20" TextColor="Black" Margin="0, 15, 0, 0"/>
            <Button Text="Nuevo Registro" x:Name="btnAgregarEmple" Clicked="btnAgregarEmple_Clicked" Margin="15" BackgroundColor="#FEB786"/>
            <ListView x:Name="ListaEmpleados" ItemTapped="ListaEmpleados_ItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell  Detail="{Binding nombre}" TextColor="Black"/>
                    </DataTemplate> 
                </ListView.ItemTemplate>
            </ListView>
                
                      
             
                

        </StackLayout>
    </ContentPage.Content>
</ContentPage>